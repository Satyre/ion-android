<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/notificationsEnabledLayout"
        android:layout_width="match_parent"
        android:padding="6dp"
        android:visibility="gone"
        android:layout_height="wrap_content" >
        
        <TextView
	        android:id="@+id/notificationEnableText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:text="Enable Notifications"
	        android:textColor="#000000"
	        android:textSize="17sp"
	        android:gravity="center" />
        
        <Switch
		    android:id="@+id/notificationsEnabledSwitch"
		    android:layout_marginRight="6dip"
		    android:layout_centerVertical="true"
		    android:layout_alignParentRight="true"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />
        
        
    </RelativeLayout>
    
    <View
	    android:layout_width="fill_parent"
	    android:layout_height="1dip"
	    android:layout_marginBottom="2dp"
	    android:background="#999999" />
    
    <TextView
        android:id="@+id/no_notifications_text"
        android:layout_width="match_parent"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content"
        android:text="Connect to a lamp to configure notifications."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:gravity="center" />

    <ListView
	    android:id="@+id/notification_listview"
	    android:visibility="gone"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" />

</LinearLayout>
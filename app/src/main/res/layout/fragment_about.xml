<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent" >
    
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical" >
    
    <ImageView android:id="@+id/lava_ion"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/lava_logo_big"
  	/>
    
    <TextView
        android:id="@+id/ion_app_title"
        android:layout_width="match_parent"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content"
        android:text="ION for Android"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:gravity="center" />
    
    <TextView
        android:id="@+id/app_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VERSION"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:gravity="center" />
    
    <TextView
        android:id="@+id/credits_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="ION made with &lt;3 by:\nEric Barch\nTony Lawrence\nWilliam Lindeman\nEric Salem"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:gravity="center" />

</LinearLayout>

<TextView
        android:id="@+id/lava_copyright_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="\u00A9 2014 lava llc"
        android:layout_marginBottom="4dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#77000000"
        android:gravity="center" />

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:background="#ffffff">

    <View
        android:id="@+id/connectionColor"
        android:layout_width="8dp"
        android:layout_height="match_parent"
    />

    <TextView
        android:id="@+id/lampName"
        android:layout_marginLeft="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/connectionColor"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:textSize="17sp" />
    
    <TextView
        android:id="@+id/lampHint"
        android:layout_marginLeft="6dp"
        android:text="Tap to connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/connectionColor"
        android:textColor="#44000000"
        android:gravity="center_vertical"
        android:textSize="14sp" />
    
    <ImageView
       	android:id="@+id/lampSignal"
       	android:layout_width="30dp"
       	android:layout_height="30dp"
       	android:layout_marginRight="2dp"
       	android:layout_centerVertical="true"
       	android:layout_alignParentRight="true"
       	android:src="@drawable/signal_none"
    />
    
    <View
        android:id="@+id/lampDivider"
        android:background="#cccccc"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
    />

</RelativeLayout>